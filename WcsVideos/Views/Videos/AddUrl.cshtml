<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="h3">
                    Add Video
                </h1>
            </div>
            <div class="panel-body">
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" role="form" method="post" action="/SuggestedVideos/SubmitUrl" id="addform">
            <div class="form-group @(this.Model.ValidationError ? "has-error" : "")">
                <label for="url" class="col-sm-2 control-label">URL</label>
                <div class="col-sm-10">
                    <input type="url" class="form-control" name="url" id="url" value="@this.Model.Url" required>
                </div>
                @if (this.Model.ValidationError)
                {
                    <p class="help-block col-sm-offset-2 col-sm-10">
                        @this.Model.ValidationErrorMessage
                    </p>
                }
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

            </div>
        </div>
    </div>
</div>
