@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>Welcome to WCS Videos!</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>Trending Videos:</h3>
        <ul>
            @foreach (var video in this.Model.Videos) {
                <li><a href="@video.Url">@video.Title</a></li>    
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Recent Events:</h3>
        <ul>
            <li><a href="#">Swingdiego</a></li>
            <li><a href="#">Michigan Dance Classic</a></li>
            <li><a href="#">Chicago Classic</a></li>
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Search:</h3>
        <p>Search for your favorite videos!</p>
    </div>
</div>
