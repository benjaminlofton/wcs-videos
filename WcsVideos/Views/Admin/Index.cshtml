@inject IOptions<AppSettings> AppSettings
@model AdminIndexViewModel

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="h3">@AppSettings.Value.SiteTitle Admin Console</h1>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    <li class="list-group-item active">
                        Video Management &nbsp;
                        <span class="glyphicon glyphicon-facetime-video"> </span>
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@this.Model.VideoCount</span>
                        <span class="glyphicon glyphicon-plus-sign"> </span> &nbsp;
                        <a asp-controller="Videos" asp-action="AddUrl">Add a new video</a>
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@this.Model.SuggestedVideoCount</span>
                        <span class="glyphicon glyphicon-cloud-upload"> </span> &nbsp;
                        <a asp-controller="Admin" asp-action="SuggestedVideoList">Review suggested videos</a>
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@this.Model.FlaggedVideoCount</span>
                        <span class="glyphicon glyphicon-flag"> </span> &nbsp;
                        <a asp-controller="Admin" asp-action="FlaggedVideoList">Review flagged videos</a>
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@this.Model.MissingEventCount</span>
                        <span class="glyphicon glyphicon-home"> </span> &nbsp;
                        <a href="@this.Model.MissingEventVideoListUrl">Edit videos missing events</a>
                    </li>
                    <li class="list-group-item">
                        <span class="glyphicon glyphicon-user"> </span> &nbsp;
                        <a href="@this.Model.MissingDancersVideoListUrl">Edit videos missing dancers</a>
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@this.Model.MissingLevelCount</span>
                        <span class="glyphicon glyphicon-dashboard"> </span> &nbsp;
                        <a href="@this.Model.MissingLevelVideoListUrl">Edit videos missing a skill level</a>
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@this.Model.MissingCategoryCount</span>
                        <span class="glyphicon glyphicon-folder-open"> </span> &nbsp;
                        <a href="@this.Model.MissingCategoryVideoListUrl">Edit videos missing a category</a>
                    </li>
                </ul>
                <ul class="list-group">
                    <li class="list-group-item active">
                        Event Management &nbsp;
                        <span class="glyphicon glyphicon-home"> </span>
                    </li>
                    <li class="list-group-item">
                        <span class="badge">@this.Model.EventCount</span>
                        <span class="glyphicon glyphicon-plus-sign"> </span> &nbsp;
                        <a asp-controller="Events" asp-action="Add">Add a new event</a>
                    </li>
                </ul>
                <ul class="list-group">
                    <li class="list-group-item active">
                        Dancer Management &nbsp;
                        <span class="glyphicon glyphicon-user"> </span>
                    </li>
                    <li class="list-group-item disabled">
                        <span class="glyphicon glyphicon-plus-sign"> </span> &nbsp;
                        Add a new dancer (coming soon)
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
